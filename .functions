#!/usr/bin/env bash

tmux_iflist()
{
    DEV=$(ip addr | awk '/state UP/ {print $2}' | sed 's/:$//' | grep -v -e '^br-' -e '^veth' -e '^docker');
    INT='';
    for i in $DEV; do
        IP=$(ip addr show dev $i | grep -e 'inet[^6]' | awk '{print $2}');
        INT="${INT}$i:$IP | ";
    done;
    echo "${INT%???}";
}
export -f tmux_iflist

"$@"
